# TODO: do a better job handling additional options to git
# TODO: consider adding --no-merge
function git () {
	# Add custom parameters to git log
	if [ "$1" == "log" ]; then
		/usr/bin/git "$@" --pretty=format:'%x09%H (%cr)%x09[%an]%x09%s' --graph;
	else
		/usr/bin/git "$@";
	fi
}
