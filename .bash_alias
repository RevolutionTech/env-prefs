#!/bin/bash

# Aliases
alias ls="ls -A"
alias ll="ls -AlF"
alias pname="ps aux | grep"
alias wai="clear; pwd; ls"

# Functions
function cd () {
	builtin cd "$@";
	
	# Rename the current tab
	THISDIR=$(echo $PWD | awk -F "/" '{print $NF}');
	printf "\e]1;$THISDIR\a";
}

